// Contact Section - Dark Theme matching reference
.contact-section {
  background-color: #050816;
  color: white;
  padding: 120px 0;
  min-height: 100vh;
  position: relative;

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  // Section Header
  .section-header {
    margin-bottom: 60px;

    .section-subtitle {
      color: #dfd9ff;
      font-weight: 800;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1.75px;
      margin-bottom: 16px;
      line-height: 1;
    }

    // Phone Section moved into header
    .phone-section {
      margin: 20px 0;

      .phone-link {
        color: white;
        font-size: 24px;
        font-weight: 600;
        text-decoration: underline;
        transition: color 0.3s ease;

        &:hover {
          color: #915eff;
        }
      }
    }

    .section-title {
      color: white;
      font-weight: 900;
      font-size: clamp(30px, 5vw, 60px);
      margin: 0;
      line-height: 1;
    }
  }

  // Main Contact Content - Two Column Layout
  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-top: 40px;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  // Globe Section
  .globe-section {
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;

    @media (max-width: 768px) {
      height: 350px;
      order: 2;
    }

    @media (max-width: 480px) {
      height: 300px;
    }
  }

  // Form Section
  .form-section {
    @media (max-width: 768px) {
      order: 1;
    }
  }

  // Contact Form
  .contact-form {
    .form-group {
      margin-bottom: 24px;

      .form-input,
      .form-textarea {
        width: 100%;
        padding: 16px 20px;
        background: rgba(29, 24, 54, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: white;
        font-size: 16px;
          font-family: inherit;
          outline: none;
          transition: all 0.3s ease;
          box-sizing: border-box;

          &::placeholder {
            color: #aaa6c3;
          }

          &:focus {
            border-color: #915eff;
            box-shadow: 0 0 0 2px rgba(145, 94, 255, 0.2);
          }

          &:invalid {
            border-color: #ef4444;
          }
        }

        .form-textarea {
          resize: vertical;
          min-height: 120px;
          font-family: inherit;
        }
      }

      // reCAPTCHA Section
      .recaptcha-section {
        margin: 32px 0;
        
        .recaptcha-text {
          color: #aaa6c3;
          font-size: 14px;
          margin: 0;
        }
      }

      // Form Actions
      .form-actions {
        margin-top: 32px;

        .submit-btn {
          background: #915eff;
          color: white;
          border: none;
          padding: 16px 32px;
          border-radius: 8px;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.3s ease;
          display: inline-flex;
          align-items: center;
          gap: 8px;
          min-width: 200px;
          justify-content: center;

          .btn-icon {
            font-size: 18px;
          }

          &:hover:not(:disabled) {
            background: #7c3aed;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(145, 94, 255, 0.4);
          }

          &:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
          }
        }
      }
    }

    // Form Status
    .form-status {
      margin-top: 24px;

      .status-message {
        padding: 16px;
        border-radius: 8px;
        font-weight: 500;

        &.success {
          background: rgba(34, 197, 94, 0.1);
          color: #22c55e;
          border: 1px solid rgba(34, 197, 94, 0.2);
        }

        &.error {
          background: rgba(239, 68, 68, 0.1);
          color: #ef4444;
          border: 1px solid rgba(239, 68, 68, 0.2);
        }
      }
    }
  }
}

// Responsive Design
@media (max-width: 768px) {
  .contact-section {
    padding: 80px 0;

    .contact-container {
      padding: 0 16px;
    }

    .section-header {
      margin-bottom: 40px;

      .section-subtitle {
        font-size: 12px;
      }
    }

    .phone-section {
      margin-bottom: 40px;
    }

    .contact-form {
      .form {
        .form-group {
          margin-bottom: 20px;

          .form-input,
          .form-textarea {
            padding: 14px 16px;
            font-size: 14px;
          }
        }

        .form-actions {
          .submit-btn {
            padding: 14px 24px;
            font-size: 14px;
            min-width: 160px;
          }
        }
      }
    }
  }
}

@media (max-width: 480px) {
  .contact-section {
    padding: 60px 0;

    .contact-form {
      .form {
        .form-actions {
          .submit-btn {
            width: 100%;
          }
        }
      }
    }
  }
}

.contact-header {
  text-align: center;
  margin-bottom: 4rem;
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    
    @media (max-width: 768px) {
      font-size: 2rem;
    }
  }
  
  .section-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
}

.contact-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 1000px;
  margin: 0 auto;
  
  @media (max-width: 968px) {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
}

.contact-info {
  .info-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }
  
  .info-text {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    
    .contact-method {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      background: var(--background-color);
      border-radius: 12px;
      border: 1px solid var(--border-color);
      transition: all 0.3s ease;
      
      &:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px var(--shadow-color);
      }
      
      .method-icon {
        width: 50px;
        height: 50px;
        background: var(--gradient-primary);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        
        mat-icon {
          color: white;
          font-size: 1.5rem;
        }
      }
      
      .method-info {
        .method-label {
          font-weight: 600;
          color: var(--text-primary);
          margin-bottom: 0.25rem;
        }
        
        .method-value {
          color: var(--text-secondary);
          
          a {
            color: inherit;
            text-decoration: none;
            
            &:hover {
              color: var(--primary-color);
            }
          }
        }
      }
    }
  }
  
  .social-links {
    margin-top: 2rem;
    
    h4 {
      margin-bottom: 1rem;
      color: var(--text-primary);
    }
    
    .social-grid {
      display: flex;
      gap: 1rem;
      
      .social-link {
        width: 50px;
        height: 50px;
        background: var(--gradient-primary);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        
        &:hover {
          transform: translateY(-3px);
          box-shadow: 0 8px 25px var(--shadow-color);
        }
        
        mat-icon {
          font-size: 1.5rem;
        }
      }
    }
  }
}

.contact-form {
  .form-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }
  
  .contact-form-wrapper {
    background: var(--background-color);
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    
    .form-group {
      margin-bottom: 1.5rem;
      
      &:last-child {
        margin-bottom: 0;
      }
      
      label {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
      }
      
      input,
      textarea {
        width: 100%;
        padding: 1rem;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        background: var(--surface-color);
        color: var(--text-primary);
        font-size: 1rem;
        transition: all 0.3s ease;
        
        &:focus {
          outline: none;
          border-color: var(--primary-color);
          box-shadow: 0 0 0 3px rgba(var(--primary-color), 0.1);
        }
        
        &.ng-invalid.ng-touched {
          border-color: var(--warn-color, #f44336);
        }
      }
      
      textarea {
        min-height: 120px;
        resize: vertical;
      }
      
      .error-message {
        color: var(--warn-color, #f44336);
        font-size: 0.85rem;
        margin-top: 0.5rem;
        display: block;
      }
    }
    
    .submit-btn {
      width: 100%;
      padding: 1rem 2rem;
      background: var(--gradient-primary);
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      
      &:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
      }
      
      &:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }
      
      mat-icon {
        font-size: 1.2rem;
      }
    }
    
    .form-status {
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 8px;
      text-align: center;
      
      &.success {
        background: rgba(76, 175, 80, 0.1);
        color: #4caf50;
        border: 1px solid rgba(76, 175, 80, 0.3);
      }
      
      &.error {
        background: rgba(244, 67, 54, 0.1);
        color: #f44336;
        border: 1px solid rgba(244, 67, 54, 0.3);
      }
    }
  }
}