<section class="hero-section">
  <div class="hero-container">
    <!-- Left Content -->
    <div class="hero-content">
      <div class="intro-text">
        <h1 class="main-title">
          Hi, I'm <span class="name-highlight">Sunny</span> 
          <span class="wave-emoji">ðŸ‘‹</span>
        </h1>
        
        <div class="typewriter-container">
          <span class="static-text">I'm a </span>
          <span class="typewriter-text">{{ currentRole }}</span>
          <span class="cursor" [class.blink]="showCursor">|</span>
        </div>
        
        <p class="welcome-text">
          Welcome to my portfolio, please view on desktop for an interactive experience!
        </p>
      </div>
    </div>
    
    <!-- Right Content - 3D PC Setup -->
    <div class="hero-visual">
      <div class="pc-setup-container">
        <div class="pc-setup" [class.rotate]="isRotating">
          <!-- Main PC Tower -->
          <div class="pc-tower">
            <div class="pc-front">
              <div class="power-button"></div>
              <div class="rgb-strip rgb-1"></div>
              <div class="rgb-strip rgb-2"></div>
              <div class="rgb-strip rgb-3"></div>
            </div>
            <div class="pc-side">
              <div class="side-panel">
                <div class="internal-glow"></div>
              </div>
            </div>
          </div>
          
          <!-- Monitor -->
          <div class="monitor">
            <div class="screen">
              <div class="code-screen">
                <div class="code-line">
                  <span class="code-purple">function</span> 
                  <span class="code-yellow">createAwesome</span>
                  <span class="code-white">() {{ '{' }}</span>
                </div>
                <div class="code-line">
                  <span class="code-white">  return </span>
                  <span class="code-green">'portfolio'</span>
                  <span class="code-white">;</span>
                </div>
                <div class="code-line">
                  <span class="code-white">&#125;</span>
                </div>
              </div>
            </div>
            <div class="monitor-stand"></div>
          </div>
          
          <!-- Keyboard -->
          <div class="keyboard">
            <div class="keyboard-base">
              <div class="key" *ngFor="let key of keyboardKeys">{{ key }}</div>
            </div>
          </div>
          
          <!-- Mouse -->
          <div class="mouse">
            <div class="mouse-body">
              <div class="mouse-light"></div>
            </div>
          </div>
          
          <!-- Desk -->
          <div class="desk">
            <div class="desk-surface"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Background Elements -->
  <div class="background-elements">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="flowing-lines">
      <div class="line" *ngFor="let line of backgroundLines"></div>
    </div>
  </div>
</section>